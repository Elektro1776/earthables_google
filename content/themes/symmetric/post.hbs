	<!--TBN BTF 300x250 pos 3 ENDS-->
						</div>
					</section>
					<div class=" post_subscribe_form col-lg-7 col-md-6 col-sm-10"style="background-image: linear-gradient(rgb(130, 179, 72), rgb(18, 147, 69));">
						{{subscribe_form placeholder="Your Email Here"}}
					</div>
				{{#if error}}
	    <p class="main-error">{{{error.message}}}</p>
				{{/if}}
									<div class="fade-1">

								        	<div class="text">{{content}}</div>
														<p class="read-more"><a class="btn" href="#">Read More</a></p>

							    </div>

						</section>
					</article>
				</div>
        </div>


				<!-- end: .content -->

